<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="es.kronox.foodinggest">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.TablesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.TableViewPagerActivity"
            android:label="@string/title_activity_table_view_pager"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".activity.DishListActivity"
            android:label="@string/title_activity_dish_list"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".activity.DishDetailActivity">
        </activity>
        <activity android:name=".activity.BillActivity">
        </activity>
    </application>

</manifest>