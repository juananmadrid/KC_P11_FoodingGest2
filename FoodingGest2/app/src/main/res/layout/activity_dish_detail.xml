<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.kronox.foodinggest.activity.DishDetailActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/dish_image"
        android:layout_width="368dp"
        android:layout_height="159dp"
        android:layout_marginTop="@dimen/fab_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ico_restaurant"
        tools:layout_editor_absoluteX="8dp"/>

    <TextView
        android:id="@+id/adapter_dish_name"
        android:layout_width="355dp"
        android:layout_height="19dp"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginTop="8dp"
        android:text="dish_name"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dish_image"/>

    <TextView
        android:id="@+id/dish_ingredients_title"
        android:layout_width="350dp"
        android:layout_height="21dp"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginTop="@dimen/fab_margin"
        android:text="Ingredients:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adapter_dish_name"
        android:layout_marginStart="@dimen/fab_margin"/>

    <TextView
        android:id="@+id/dish_ingredients"
        android:layout_width="347dp"
        android:layout_height="22dp"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginTop="@dimen/min_margen"
        android:text="ingredients"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dish_ingredients_title"
        android:layout_marginStart="@dimen/fab_margin"/>

    <TextView
        android:id="@+id/dish_price"
        android:layout_width="347dp"
        android:layout_height="23dp"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginTop="@dimen/fab_margin"
        android:text="Price"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dish_ingredients"
        android:layout_marginStart="@dimen/fab_margin"/>


    <TextView
        android:id="@+id/dish_observations"
        android:layout_width="346dp"
        android:layout_height="23dp"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginTop="@dimen/fab_margin"
        android:text="Variations:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dish_price"/>

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="8dp"
        android:text="@android:string/cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/accept_button"/>

    <Button
        android:id="@+id/accept_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@android:string/ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        android:id="@+id/editText"
        android:layout_width="345dp"
        android:layout_height="66dp"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginTop="@dimen/min_margen"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dish_observations"/>

</android.support.constraint.ConstraintLayout>
